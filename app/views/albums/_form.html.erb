<div class="main-div">

    <%= form_for(@album, :url => albums_path, :html => { :multipart => true }) do |f| %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :cover_photo %><br>
        <%= f.file_field :cover_photo %>
      </div>    
      <div class="actions">
        <%= f.submit %>
      </div>
</div>
<% end %>